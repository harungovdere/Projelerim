@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model FiloKiralama_UI.Dtos.UsersDtos.CreateUsersDto

<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<div class="container">
    @using (Html.BeginForm("RegisterMemberPost", "Default", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", @role = "form" }))
{
        <h2>Üyelik Kayıt Formu</h2>
        @* <button id="test">testt</button> *@
        <div class="form-group">
            <label class="col-sm-3 control-label">Kimlik No</label>
            <div class="col-sm-9">
                <input type="text" asp-for="TC" placeholder="T.C. Kimlik No" class="form-control" autofocus>
                <span asp-validation-for="TC"></span>
                @if (ViewBag.TC != "" || ViewBag.TC !=null)
                {
                    <span>@ViewBag.TC</span>
                }
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Adınız</label>
            <div class="col-sm-9">
                <input type="text" asp-for="Ad" placeholder="Adınız" onkeyup="PlakaUcase(this)" class="form-control" autofocus>
                <span asp-validation-for="Ad"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Soyadınız</label>
            <div class="col-sm-9">
                <input type="text" asp-for="Soyad" placeholder="Soyadınız" onkeyup="PlakaUcase(this)" class="form-control" autofocus>
                <span asp-validation-for="Soyad"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Doğum Tarihi</label>
            <div class="col-sm-9">
                <input type="date" asp-for="DogumTarihi" class="form-control">
                <span asp-validation-for="DogumTarihi"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3">Cinsiyet</label>
            <div class="col-sm-6">
                <div class="row">
                    <div class="col-sm-4">
                        <label for="erkek" class="radio-inline">Erkek</label>
                            <input type="radio" asp-for="Cinsiyet"  id="erkek" value="ERKEK">
                           @* Erkek @Html.RadioButton("Cinsiyet","ERKEK",new { @class = "form-control",@onclick="CheckSelected()",@value="ERKEK" }) *@
                    </div>
                    <div class="col-sm-4">
                        <label for="kadin" class="radio-inline">Kadın</label>
                            @* Kadın @Html.RadioButton("Cinsiyet", "KADIN", new { @class = "form-control", @onclick = "CheckSelected()",@value = "KADIN" }) *@
                        <input type="radio" asp-for="Cinsiyet"  id="kadin" value="KADIN">
                    </div>
                </div>
                <span asp-validation-for="Cinsiyet"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Ehliyet No</label>
            <div class="col-sm-9">
                <input type="text" asp-for="EhliyetNo" placeholder="Ehliyet No" class="form-control" autofocus>
                <span asp-validation-for="EhliyetNo"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Ehliyet Sınıfı</label>
            <div class="col-sm-9">
                <select asp-for="EhliyetSinifi" class="custom-select px-4" style="height: 50px;">
                    <option selected>Ehliyet sınıfı seçiniz</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                    <option value="E">E</option>
                </select>
                <span asp-validation-for="EhliyetSinifi"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Telefon No</label>
            <div class="col-sm-9">
                @* <input type="text" asp-for="CepTel" placeholder="Telefon numaranız" pattern="[0-9]{3} [0-9]{3}-[0-9]{2}[0-9]{2}" class="form-control"> *@
                <input type="text" asp-for="CepTel" placeholder="Telefon numaranız" class="form-control">
                @* <small>Format: 5XX XXX XXXX</small> *@
                <span asp-validation-for="CepTel"></span>

            </div>
        </div>
        <div class="form-group">
            <label  class="col-sm-3 control-label">Email</label>
            <div class="col-sm-9">
                <input type="email" asp-for="Email" placeholder="Mail adresiniz" class="form-control">
                <span asp-validation-for="Email"></span>
                @if (ViewBag.email != "" || ViewBag.email !=null)
                {
                    <span>@ViewBag.email</span>
                }
            </div>
        </div>
        
        <div class="form-group">
            <label for="password" class="col-sm-3 control-label">Şifre</label>
            <div class="col-sm-9">
                <input type="password" asp-for="Sifre" placeholder="Şifre giriniz" class="form-control">
                <span asp-validation-for="Sifre"></span>
            </div>
        </div>
        @* <div class="form-group">
            <label for="password" class="col-sm-3 control-label">Şifreyi Onayla</label>
            <div class="col-sm-9">
                <input type="password" id="password" placeholder="Şifre Onayla" class="form-control">
            </div>
        </div> *@
        
        <button type="submit" class="btn btn-primary btn-block">Kayıt Ol</button>
    } <!-- /form -->
</div> <!-- ./container -->
<script src="~/js/jquery-3.7.1.js"></script>
<script type='text/javascript' src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/3.1.60/inputmask/jquery.inputmask.js"></script>

<script>
    
    var $j = jQuery.noConflict();
    $j(document).ready(function () {
        $j("#CepTel").inputmask({
            mask: "(999) 999-9999"
        });
        $j('#TC').inputmask('99999999999');
        $j('#EhliyetNo').inputmask('999999');
    });

    // var $j = jQuery.noConflict();
    // $j(document).ready(function () {
    //     $j('#CepTel').inputmask('(999) 999-9999', { reverse: true });

    // });

    $("#test").click(function () {
        alert("çalıştı")
    })
    function PlakaUcase(UpCstr) {
        var UCStr = UpCstr.value;
        UpCstr.value = UCStr.toUpperCase();
    }
    
 </script> 
